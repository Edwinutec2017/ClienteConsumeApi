@{
    ViewBag.Title = "Registro Usuario";
    Layout = null;
    var mensaje = TempData["msg"];
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="~/Content/Login/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Login/Login.css" rel="stylesheet" />
    <link href="~/Content/Login/all.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<body>
    <div class="container">

        <div class=" justify-content-center regText" style="padding-top:25px">
            <div class="card-header">
                <h1 align="center">POLICOMERCE</h1>
                <h2 align="center">REGISTRO USUARIO</h2>

            </div>
        </div>
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formRegistro" }))
        {
            @Html.AntiForgeryToken()
            <div class="d-flex justify-content-center">

                <div class="card" style="padding:10px;padding-top:25px">

                    <div class="input-group form-group">
                        <input type="text" name="PrimerNombre" class="form-control" id="PrimerNombre" placeholder="Primer Nombre" required>
                    </div>
                    <div class="input-group form-group">
                        <input type="text" name="SegundoNombre" class="form-control" id="nombre2" placeholder="Segundo Nombre">
                    </div>
                    <div class="input-group form-group">
                        <input type="text" name="PrimerApellido" class="form-control" id="apellido1" placeholder="Primer Apellido" required>
                    </div>
                    <div class="input-group form-group">
                        <input type="text" name="SegundoApellido" class="form-control" id="apellido2" placeholder="Segundo Apellido" required>
                    </div>
                    <div class="input-group form-group">
                        <input type="number" name="Edad" class="form-control" placeholder="Edad" required>
                    </div>
                    <div class="input-group form-group">
                        <select class="form-control" name="Genero" required>
                            <option>Genero</option>
                            <option value='M'>Masculino</option>
                            <option value='F'>Femenino</option>

                        </select>

                    </div>

                </div>
                <div class="card" style="padding:10px;padding-top:25px">
                    <div class="input-group form-group">
                        <input type="tel" name="Telefono" class="form-control" id="telefono" placeholder="Telefono" required>
                    </div>
                    <div class="input-group form-group">
                        <select class="form-control" onchange="CargarMunicipios()" name="Departamento" id="Departamento">
                            <option value=null>Departamento</option>
                            @foreach (var dep in ViewBag.DepyMuni)
                            {
                                <option data-Codigo="@dep.Codigo" value="@dep.Codigo">@dep.Nombre</option>

                            }
                        </select>
                    </div>
                    <div class="input-group form-group">
                        <select class="form-control" name="IdMunicipio" id="IdMunicipio">
                            <option value="">Municipio</option>

                        </select>

                    </div>
                    <div class="input-group form-group">
                        <input type="text" name="Direccion" class="form-control" id="direccion" placeholder="Direccion">
                    </div>
                    <div class="input-group form-group">
                        <input type="text" name="NombreUsuario" class="form-control" id="usuario" placeholder="Usuario" required>
                    </div>
                    <div class="input-group form-group">
                        <input type="password" name="Password" class="form-control" id="pass1" placeholder="Password" required>
                    </div>


                </div>

                <div class="card" style="padding:10px;padding-top:25px">
                    <div class="input-group form-group">
                        <input type="password" name="pass2" class="form-control" id="pass1" placeholder="Repita Password" required>
                    </div>
                    <div class="input-group form-group">
                        <input type="email" name="Email" class="form-control" id="pass1" placeholder="Email" required>
                    </div>
                    <div class="card-body">

                        <div class="form-group">
                            <input type="submit" value="Registro" onchange="validarPassword();" class="btn btn-primary btn-lg active float-right ">
                            <a href="/Login/Index" class="btn btn-danger btn-lg active" id="Cancelar" role="button">Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div>
        <br />

        <h5 style="color:#ffffff" id="msg">
            <span id="msg">@mensaje</span>
        </h5>
    </div>

    <script src="~/Scripts/Registro/jquery.min.js"></script>
    <script src="~/Scripts/Registro/LoginRegistro.js"></script>

</body>
</html>