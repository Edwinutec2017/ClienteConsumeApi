@using Dto.Dto.Login;
@{
    ViewBag.Title = "Menu Principal";
    var usuario = Session["User"] as LoginDto;

}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Menu/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/Menu/bootstrap.min.js"></script>
    <script src="~/Scripts/Menu/jquery-1.11.1.min.js"></script>
    <link href="~/Content/Menu/Menu.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>


    <div class="navbar navbar-inverse navbar-fixed-top">

        <input type="checkbox" name="mobile-nav" id="mobile-nav" class="burger-check" onchange="this.blur()">
        <label for="mobile-nav" class="burger white" tabindex="0"><span></span></label>
        <nav role="navigation" class="header-nav">
            <div class="fixed-nav">
                <div class="menu">

                    <div class="navbar-collapse collapse">
                        <ul>

                            <li class="page_item page-item-2">
                                <h4>Bienvenido : @usuario.User</h4>
                            </li>


                            <li class="page_item page-item-2">
                                @Html.ActionLink("Inicio", "Index", "Home")
                            </li>
                            <li class="page_item page-item-2">
                                @Html.ActionLink("Acerca de", "About", "Home")
                            </li>
                            <li class="page_item page-item-2">
                                @Html.ActionLink("Contacto", "Contact", "Home")
                            </li>
                            <li class="page_item page-item-2">
                                <p>
                                    <a href="@Url.Action("CerrarSession","Login")" class="btn btn-info btn-lg">
                                        <span class="glyphicon glyphicon-log-out"></span>Cerrar Session
                                    </a>
                                </p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Policomerce </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
