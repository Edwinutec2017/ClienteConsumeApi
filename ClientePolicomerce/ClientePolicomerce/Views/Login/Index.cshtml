@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link href="~/Content/Login/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Login/Login.css" rel="stylesheet" />
    <link href="~/Content/Login/all.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h2 align="center" id="loginText">POLICOMERCE</h2>
                    <h4 align="center" id="loginText">LOGIN</h4>

                </div>
                <div class="card-body">

                    <form>
                        <div class="input-group form-group">

                            <input type="text" class="form-control" placeholder="username" required>

                        </div>
                        <div class="input-group form-group">
                            <input type="password" class="form-control" placeholder="password" required>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-primary btn-lg active float-right ">
                        </div>

                    </form>
                    <a href="/Login/Registro" class="btn btn-info btn-lg active" role="button" aria-pressed="true">Registro</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>