@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/Login/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/Login/bootstrap.min.js"></script>
    <script src="~/Scripts/Login/jquery-1.11.1.min.js"></script>
    <link href="~/Content/Login/Login.css" rel="stylesheet" />
</head>
<body>


    <div id="login">
        <h3 class="text-center text-white pt-5">POLICOMERCE</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="" method="post">
                            <h3 class="text-center text-info">LOGIN</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Usuario:</label><br>
                                <input type="text" name="username" id="username" class="form-control" required placeholder="Usuario">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Password:</label><br>
                                <input type="password" name="password" id="password" class="form-control" required placeholder="Password">
                            </div>
                            <div class="form-group">
                               
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="INICIO">
                            </div>
                            <br>
                            <div id="register-link" class="text-right">
                                <a href="#" class="text-info">Registro</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
